<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
     <item android:state_pressed="true" >

		<layer-list>
		    <item >
		        <shape>
		            <solid android:color="@color/ifsee_blue" />
		            <corners android:radius="5dp" />
		        </shape>
        	</item>
		 	<item >
			     <shape>
			          <corners android:radius="5dp" />
					<solid android:color="@color/global_bt_mask_black" />
				</shape>
			</item>
		
		</layer-list>
    </item>

     <!-- 定义当button 处于pressed 状态时的形态。-->
     
    <item  android:state_pressed="false" android:state_enabled="false" >

        <layer-list>
		    <item >
		        <shape>
		            <solid android:color="@color/ifsee_gray_edit_bg" />
		            <corners android:radius="5dp" />
		        </shape>
        	</item>
        </layer-list>
    </item>
	<item  android:state_pressed="false" android:state_enabled="true" >

		<layer-list>
			<item >
				<shape>
					<solid android:color="@color/ifsee_blue" />
					<corners android:radius="5dp" />
				</shape>
			</item>
		</layer-list>
	</item>
</selector>
